<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC000000"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4CAF50"
            android:gravity="center"
            android:shadowColor="#FAFAFA"
            android:text="CUCEI Verde"
            android:textColor="#FFFFFF"
            android:textColorLink="#4CAF50"
            android:textSize="34sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:backgroundTint="#24894D"
                android:backgroundTintMode="add"
                android:drawableLeft="@android:drawable/ic_menu_revert"
                android:drawableTint="#FFFFFF"
                android:insetLeft="10dp"
                android:paddingHorizontal="10dp"
                android:paddingStart="10dp"
                android:text="Regresar"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="¡Crea tu cuenta!"
            android:textColor="#FFFFFF"
            android:textColorLink="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editNameSignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#00C853"
            android:ems="10"
            android:gravity="start"
            android:hint="Ingresa un nombre de usuario"
            android:inputType="text|textPersonName|textNoSuggestions"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAFFFFFF" />

        <EditText
            android:id="@+id/editEmailSignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#00C853"
            android:ems="10"
            android:gravity="start"
            android:hint="Ingresa tu correo"
            android:inputType="text|textEmailAddress"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAFFFFFF" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <EditText
            android:id="@+id/editPasswordSignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#00C853"
            android:ems="10"
            android:gravity="center|start"
            android:hint="Ingresa tu contraseña"
            android:inputType="text|textPassword|textNoSuggestions"
            android:textColorHint="#AAFFFFFF" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <EditText
            android:id="@+id/editPasswordSignup2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#00C853"
            android:ems="10"
            android:gravity="center|start"
            android:hint="Vuelve a ingresar tu contraseña"
            android:inputType="text|textPassword|textNoSuggestions"
            android:textColorHint="#AAFFFFFF" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <Button
            android:id="@+id/btnCreateAcc"
            android:layout_width="390dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:backgroundTint="#8BC34A"
            android:text="@string/crear_cuenta"
            android:textColorLink="#FFFFFF"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <ProgressBar
            android:id="@+id/progressBarRegister"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:progressBackgroundTint="#00C853"
            android:progressTint="#00C853"
            android:visibility="invisible" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>